<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <Button
        android:layout_above="@id/btn_teacher_modify"
        android:id="@+id/btn_add_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:text="Add Biodata"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_teacher_modify"
        android:layout_width="match_parent"
        android:background="@drawable/button_add"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="UPDATE OR DELETE" />


    <ListView
        android:layout_above="@id/btn_add_teacher"
        android:layout_alignParentTop="true"
        android:id="@+id/teachers_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>


</RelativeLayout>